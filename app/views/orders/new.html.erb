<%= render "shared/navbar" %>
<div class="container">
  <h1>New Order</h1>
  <div class="row">
    <div class="col-md-6">
      <h2><%= @product.title %></h2>
      <p><%= number_to_currency(@product.price) %></p>
      <% if @product.discount_price %>
        <div>
          <p><strike><%= number_to_currency(@product.price) %></strike></p>
          <p><%= number_to_currency(@product.discount_price) %></p>
          <p>Total price: <%= number_to_currency(@product.discount_price) %></p>
        </div>
      <% else %>
        <p>Total price: <%= number_to_currency(@product.price) %></p>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= render "form", order: @order %>
    </div>
  </div>
  <br>
  <div>
    <%= link_to "Back to product", product_path(@product.id) %>
  </div>
</div>

<%= render "shared/footer" %>
