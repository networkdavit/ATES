<%= render "shared/navbar" %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4">Orders</h1>

      <div id="orders">
        <% @orders.each do |order| %>
          <%= render order %>
          <p>
            <%= link_to "Show this order", order, class: "btn btn-primary" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
