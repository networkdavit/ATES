<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%#= link_to image_tag('your-logo.png', alt: 'Your Logo', class: 'navbar-brand'), root_path %>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Home', root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% categories.each do |category| %>
            <%= link_to category.title, show_by_category_path(category_id: category.id), class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
      <% if current_user && current_user.admin? %>
        <li class="nav-item">
          <p>Welcome <%= current_user.email %></p>
        </li>
        <li><%= link_to "New Product", new_product_path %></li>
        <%= link_to "Edit Password", edit_user_registration_path(current_user), method: :get %>
        <li><%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %></li>
      <% end %>
    </ul>
    <form class="d-flex mx-3" id="search-form">
      <%= text_field_tag :search, nil, class: "form-control me-2", placeholder: "Search" %>
      <%= button_tag "Search", type: "submit", class: "btn btn-outline-secondary", id: "search-btn", name: nil %>
    </form>
  </div>
</nav>


<script>
    $(document).on('turbolinks:load', function() {
        $('#search-form').on('keyup', function(event) {
            if (event.keyCode === 13) {
                event.preventDefault();
                $('#search-btn').click();
            }
        });

        $('#search-btn').on('click', function() {
            let searchValue = $('#search-form').find('input[name="search"]').val();
            $.ajax({
                type: 'GET',
                url: '/products',
                data: { search: searchValue },
                dataType: 'script'
            });
        });
    });
</script>



